<div class="px-4 py-6 w-full md:w-1/3">
  <div class="shadow p-4 bg-orange-100">
    <div class="flex justify-center mb-4">
      <div class="rounded-full w-20 h-20 shadow bg-orange-300 flex items-center justify-center">
        <span class="text-2xl font-black text-orange-800">
          <% if invitation.user.avatar_url.present? %>
            <%= image_tag invitation.user.avatar_url, class: 'w-20' %>
          <% elsif invitation.user.name.present? %>
            <%= invitation.user.name.initials %>
          <% else %>
            NN
          <% end %>
        </span>
      </div>
    </div>
    <div class="text-center bold text-lg mb-4">
      <% if invitation.user.name.present? %>
        <%= invitation.user.name %>
      <% else %>
        Anonymous user
      <% end %>
    </div>
    <div class="text-center mb-4">
      <span class="px-4 py-1 shadow <%=
        invitation.state.in?(%w(busy_that_day too_far_away pending)) ? 'bg-orange-600' :
        invitation.state.in?(%w(dying_to_go arriving_late)) ? 'bg-black' : 'bg-orange-900' %>
        text-white rounded-full"
      >
        <%= invitation.state.humanize %>
      </span>
    </div>
    <div class="flex justify-between">
      <% invitation.map_transit_predictions.each do |mode, time| %>
        <div class="flex flex-col items-center p-4">
          <span class="fas fa-<%= mode %> text-yellow-800 text-lg mb-2"></span>
          <div><%= time %></div>
        </div>
      <% end %>
    </div>
  </div>
</div>
